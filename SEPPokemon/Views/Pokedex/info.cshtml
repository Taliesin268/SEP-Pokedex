@model IEnumerable<SEPPokemon.Models.Pokemon>

@{ 
    Pokemon prev = null;
    Pokemon next = null;
    Pokemon curr = null;
    if (Model.Count() == 3)
    {
        prev = Model.ElementAt(0);
        next = Model.ElementAt(2);
        curr = Model.ElementAt(1);
    } else
    {
        if(Model.First().PokemonId == (int)ViewData["id"])
        {
            curr = Model.First();
            next = Model.Last();
        } else
        {
            prev = Model.First();
            curr = Model.Last();
        }

    }
}

<html class="bg-other" lang="en">
<head>
 
    <title>Pokemon|Pokedex</title>
</head>
<body>
